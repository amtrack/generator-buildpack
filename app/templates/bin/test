#!/usr/bin/env bash
# See README.md for info on running these tests.

testDetectWithHelloTxt() {
	detect "hello-txt"
	assertCaptured "<%= name %>"
	assertCapturedSuccess
}

testDetectWithoutHelloTxt() {
	detect "no-hello-txt"
	assertCapturedError 1 ""
}

